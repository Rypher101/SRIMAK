@model IEnumerable<FinishedProductModel>

@{
    Layout = null;
}
<!DOCTYPE html>

<html lang="en">

<head>
    <meta charset="utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1"/>
    <title>@ViewData["Title"] - SRIMAK</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no" name="viewport"/>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet"/>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css"/>
    <!-- CSS Files -->
    <link href="~/Dashboards/assets/css/bootstrap.css" rel="stylesheet"/>
    <link href="~/Dashboards/assets/css/light-bootstrap-dashboard.css?v=2.0.0 " rel="stylesheet"/>
    <style>
        .margin-left { margin-left: 10px; }
    </style>
</head>

<bod>

    <h4 class="card-title" style="margin-left: 20px;">
        <div style="text-align: center;">Sales Order : @ViewData["so"]</div>
    </h4>


    <div class="col-md-6">
        <table>
            <tr>
                <td style="width: 150px">
                    <b>Reseller Name : </b>
                </td>
                <td>@ViewData["resellerName"]</td>
            </tr>
            <tr>
                <td>
                    <b>Contact : </b>
</td>
                <td>@ViewData["resellerContact"]</td>
            </tr>
            <tr>
                <td>
                    <b>Address : </b>
                </td>
                <td>@ViewData["resellerAddress"]</td>
            </tr>
            <tr>
                <td>
                    <b>Email : </b>
                </td>
                <td>@ViewData["resellerEmail"]</td>
            </tr>
        </table>
    </div>
    <br/>

    <table class="table table-hover table-striped" style="margin-left: 15px; margin-right: 20px;">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.pro_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QTY)
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pro_id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QTY)
                </td>
            </tr>
        }
        </tbody>
    </table>
    <br/>
    <table style="margin-left: 15px;">
        <tr style="vertical-align: center">
            <td style="width: 150px">
                <b>Total Item Count </b>
            </td>
            <td style="width: 20px">:</td>
            <td>@ViewData["totalItems"]</td>
        </tr>
        <tr style="vertical-align: center">
                <td>
                    <b>Total Cost </b>
                </td>
                <td style="width: 20px">:</td>
                <td>Rs.@ViewData["totalCost"]</td>
            </tr>
        </table>
    <br/>
    <br/>
    <table style="margin-left: 15px; margin-right: 20px" width="95%">
        <tbody>
        <tr>
            <td align="left">______________</td>
            <td align="right">______________</td>
        </tr>
        <tr>
            <td align="left">Distributor</td>
            <td align="right">Reseller</td>
        </tr>
        </tbody>
    </table>

</bod>
</html>