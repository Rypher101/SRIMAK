@model IEnumerable<SRIMAK.Models.FinishedProductModel>

@{
    ViewData["Title"] = "FinishedProducts";
    Layout = "~/Views/Shared/_LayoutClerkDashboard.cshtml";
}

    <div class="row">
        <div class="col-md-12">
            <div class="card ">
                <div class="card-header ">
                    <div class="row">
                        <h4 class="card-title" style="margin-left: 20px;">Finished Products</h4>
                    </div>


                </div>
                <div class="card-body table-full-width table-responsive">
                    <table class="table table-hover table-striped" style="margin-left: 15px; margin-right: 20px;">
                        <thead>
                            <tr>
                                <th>
                                    <a href="@Url.Action("FinishedProducts", "ManagerDashboard", new {sortPram = "pro_id", typePram = ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.pro_id) </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("FinishedProducts", "ManagerDashboard", new {sortPram = "finished_product.name", typePram = ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Name) </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("FinishedProducts", "ManagerDashboard", new {sortPram = "finished_product.qty", typePram = ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.QTY) </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("FinishedProducts", "ManagerDashboard", new {sortPram = "finished_product.price", typePram = ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.Price) </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("FinishedProducts", "ManagerDashboard", new {sortPram = "finished_product.rm_id", typePram = ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.rm_id) </a>
                                </th>
                                <th>
                                    <a href="@Url.Action("FinishedProducts", "ManagerDashboard", new {sortPram = "raw_materials.name", typePram = ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.rm_name) </a>
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.pro_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.QTY)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Price)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.rm_id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.rm_name)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>