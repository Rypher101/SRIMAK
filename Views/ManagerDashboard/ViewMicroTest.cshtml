@model SRIMAK.Models.MicroTestModel

@{
    ViewData["Title"] = "ViewMicroTest";
    Layout = "~/Views/Shared/_LayoutManagerDashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header ">
                <div class="row">
                    <h4 class="card-title" style="margin-left: 20px;">Monthly Microbiology Test Result</h4>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <hr />
                    <div class="col-md-5 offset-3 ">
                        <dl class="row">
                            <dt class="col-md-5">
                                @Html.DisplayNameFor(model => model.Code)
                            </dt>
                            <dd class="col-md-6">
                                @Html.DisplayFor(model => model.Code)
                            </dd>
                            <dt class="col-md-5">
                                @Html.DisplayNameFor(model => model.Date)
                            </dt>
                            <dd class="col-md-6">
                                @Html.DisplayFor(model => model.Date)
                            </dd>
                            <dt class="col-md-5">
                                @Html.DisplayNameFor(model => model.ecoli)
                            </dt>
                            <dd class="col-md-6">
                                @Html.DisplayFor(model => model.ecoli)
                            </dd>
                            <dt class="col-md-5">
                                @Html.DisplayNameFor(model => model.colWell)
                            </dt>
                            <dd class="col-md-6">
                                @Html.DisplayFor(model => model.colWell)
                            </dd>
                            <dt class="col-md-5">
                                @Html.DisplayNameFor(model => model.colFinal)
                            </dt>
                            <dd class="col-md-6">
                                @Html.DisplayFor(model => model.colFinal)
                            </dd>
                            <dt class="col-md-5">
                                @Html.DisplayNameFor(model => model.Result)
                            </dt>
                            <dd class="col-md-6">
                                @if (Model.Result == 1)
                                {
                                    <p>Pass</p>
                                }
                                else
                                {
                                    <p>Fail</p>
                                }
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

