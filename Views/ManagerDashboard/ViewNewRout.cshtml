@model SRIMAK.Models.RoutModel

@{
    ViewData["Title"] = "ViewNewRout";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="row">
<div class="col-md-12">
    <div class="card ">
        <div class="card-header ">
            <div class="row">
                <h4 class="card-title" style="margin-left: 20px;">New Rout</h4>
                <div class=offset-8><a class="btn btn-primary" href="@Url.Action("CreateNewRout", "ManagerDashboard")" role="button">Create New</a></div>
            </div>
        </div>
        <div class="card-body">
            <div>
                <hr />
                <div class="col-md-10 offset-4">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.RoutId)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.RoutId)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Town)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Town)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a class="btn btn-success btn-sm" href="@Url.Action("EditRout","ManagerDashboard", new {id = Model.RoutId})" role="button"><b>Edit</b></a>

                </div>
            </div>
        </div>
    </div>
</div>
</div>
