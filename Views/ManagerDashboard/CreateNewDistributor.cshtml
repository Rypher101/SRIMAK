@model SRIMAK.Models.DistributorModel

@{
    ViewData["Title"] = "CreateNewDistributor";
    Layout = "~/Views/Shared/_LayoutManagerDashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header ">
                <h4 class="card-title">Register Distributor</h4>
            </div>
            <div class="card-body">
                <hr />
                <div class="row">
                    <div class="col-md-4 offset-4">
                        <form asp-action="CreateNewDistributorResult">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label class="control-label">Distributor ID will be assigned by the system</label>
                            </div>
                            <div class="form-group">
                                <label asp-for="Name" class="control-label"></label>
                                <input asp-for="Name" class="form-control" required="" />
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="control-label"></label>
                                <input asp-for="Email" class="form-control" required="" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NIC" class="control-label"></label>
                                <input asp-for="NIC" class="form-control" required="" />
                                <span asp-validation-for="NIC" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Contact" class="control-label"></label>
                                <input asp-for="Contact" class="form-control" required="" />
                                <span asp-validation-for="Contact" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="vehi_no" class="control-label"></label>
                                <input asp-for="vehi_no" class="form-control" required="" />
                                <span asp-validation-for="vehi_no" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="vehi_type" class="control-label"></label>
                                <input asp-for="vehi_type" class="form-control" required="" />
                                <span asp-validation-for="vehi_type" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Rout" class="control-label"></label>
                                <select name="Rout" id="Rout" class="form-control">
                                    @foreach (var item in ViewBag.Routs)
                                    {
                                        <option value="@item.RoutId">@item.RoutId - @item.Town</option>
                                    }
                                </select>
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Create" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


