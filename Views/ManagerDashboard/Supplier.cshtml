@model IEnumerable<SRIMAK.Models.SupplierModel>

@{
    ViewData["Title"] = "Supplier";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header ">
                <div class="row">
                    <h4 class="card-title" style="margin-left: 20px;">Supplier</h4>
                    <div class="col-md-1 offset-9"><a class="btn btn-primary btn-sm" href="@Url.Action("CreateNewSupplier","ManagerDashboard")" role="button"><b>Create New</b></a></div>
                </div>


            </div>
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped" style="margin-left: 15px; margin-right: 20px;">
                    <thead>
                        <tr>
                            <th>
                                <a href="@Url.Action("Supplier","ManagerDashboard" , new {sortPram = "supplier.sup_id" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.suppId) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Supplier","ManagerDashboard" , new {sortPram = "supplier.name" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Name) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Supplier","ManagerDashboard" , new {sortPram = "supplier.contact" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Contact) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Supplier","ManagerDashboard" , new {sortPram = "supplier.email" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Email) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Supplier","ManagerDashboard" , new {sortPram = "supplier.user_id" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.userId) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Supplier","ManagerDashboard" , new {sortPram = "user.name" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.uName) </a>
                            </th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.suppId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Contact)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.userId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.uName)
                            </td>
                            <td>
                                <a rel="tooltip" title="Materials" class="btn btn-simple btn-success btn-link" href="@Url.Action("SupplierMaterial", "ManagerDashboard", new {id = item.suppId})" role="button"><i class="fa fa-inbox"></i></a>
                                <a rel="tooltip" title="Edit" class="btn btn-info btn-simple btn-link" href="@Url.Action("EditSupplier", "ManagerDashboard", new {id = item.suppId})" role="button"><i class="fa fa-edit"></i></a>
                                <a rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-link" href="@Url.Action("DeleteSupplierResult", "ManagerDashboard", new {id = item.suppId})" role="button" onclick="return confirm('Are sure wants to delete?');"><i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>