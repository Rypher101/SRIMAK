@using System.Linq.Expressions
@using MySqlX.XDevAPI
@model IEnumerable<SRIMAK.Models.RawMaterialModel>

@{
    ViewData["Title"] = "Materials";
    Layout = "~/Views/Shared/_LayoutManagerDashboard.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="card ">
            <div class="card-header ">
                <div class="row">
                    <h4 class="card-title" style="margin-left: 20px;">Raw Materials</h4>
                    <div class="col-md-1 offset-9"><a class="btn btn-primary btn-sm" href="@Url.Action("CreateNewMaterial","ManagerDashboard")" role="button"><b>Create New</b></a></div>
                </div>
                

            </div>
            <div class="card-body table-full-width table-responsive">
                <table class="table table-hover table-striped" style="margin-left: 15px; margin-right: 20px;">
                    <thead>
                        <tr>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard" , new {sortPram = "rm_id" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Id)</a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "name" , typePram = @ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.Name) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "rm_size" , typePram = @ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.Size) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "qty" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.QTY) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "rol" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.ROL) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "buffer_stock" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Buffer) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "max_consumption" , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Consumption) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "stock_level " , typePram = @ViewData["sortType"]})">@Html.DisplayNameFor(model => model.Stock) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "request" , typePram = @ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.Request) </a>
                            </th>
                            <th>
                                <a href="@Url.Action("Materials","ManagerDashboard", new {sortPram = "req_date" , typePram = @ViewData["sortType"]})"> @Html.DisplayNameFor(model => model.ReqDate) </a>
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Size)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.QTY)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ROL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Buffer)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Consumption)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Stock)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Request)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReqDate)
                            </td>
                            <td class="td-actions text-right">
                                <a rel="tooltip" title="Edit" class="btn btn-info btn-simple btn-link" href="@Url.Action("EditMaterial","ManagerDashboard", new {id = item.Id})" role="button"><i class="fa fa-edit"></i></a>
                                <a rel="tooltip" title="Remove" class="btn btn-danger btn-simple btn-link" href="@Url.Action("DeleteMaterialResult","ManagerDashboard", new {id = item.Id})" role="button" onclick="return confirm('Are sure wants to delete?');"> <i class="fa fa-times"></i></a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>